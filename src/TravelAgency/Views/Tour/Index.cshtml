@model TourViewModel

@{
    ViewBag.Title = "Tour details";
    Layout = "_Layout";
}

<div class="page-header">
    <h1>Tour details</h1>
</div>

<div class="container">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <form>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Country">Country</label>
                        <input asp-for="Country" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate">Start date</label>
                        <input asp-for="StartDate" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate">End date</label>
                        <input asp-for="EndDate" disabled class="form-control" />
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-footer">
            @if (Model.CurrentReservations < Model.MaxResrvations)
            {

                <form asp-controller="Reservation" asp-action="Add" method="post">

                        <div>
                            <input hidden name="TourId" value="@Model.Id" />
                            <input hidden name="User" value="@User.Identity.Name" />
                        </div>
                        <div class="form-group">
                            <Label name="Comment">Comment</Label>
                            <input name="Comment" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-default">Reserve</button>
                </form>
            }
            else
            {
                <span class="label label-warning">Maximum reservation exceeded. You cannot reserve this trip</span>
            }
        </div>
    </div>
</div>


    



