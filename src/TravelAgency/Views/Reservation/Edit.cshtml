@model ReservationViewModel

@{
    ViewBag.Title = "Edit reservation";
    Layout = "_Layout";
}

<div class="page-header">
    <h1>Edit reservation</h1>
</div>

<div class="container">
    <form asp-controller="Reservation" asp-action="Edit" method="post">
        <div class="container">
            <div class="form-group">
                <label asp-for="Comment">Comment</label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User">User</label>
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="TourId" class="form-control"/>
            <button type="submit" class="btn btn-default">Edit reservation</button>
        </div>
    </form>
</div>